<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="yuriymagus.elevators_management_lab.GreetingController">

    <StackPane>

        <ImageView>
            <Image url="background.png"/>
            <!-- Intellij IDEA marks as error, but only
            with this path program can be launched.
            Changing to Intellij suggestion will case exception
            in Application start method. -->
        </ImageView>

        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>

        <Label fx:id="welcomeText"/>
        <ImageView onMouseClicked="#onHelloButtonClick">
            <Image fx:id="welcomeButton" url="start_button.png"/>
        </ImageView>


    </StackPane>
</VBox>
